<div class="container">
   <nav class="navbar bg-body-tertiary bg-body-secondary">
  <div class="container-fluid p-0 ">
    <a href="/flowers/all" class=" fs-1 text-black link-dark border  text-decoration-none">Bosh sahifa</a>
    <span class="navbar-brand mb-0 fs-1 fw-bolder">Dashboard</span>
    <button  class="btn btn-primary add_flower-btn">+ Qo'shish</button>
  </div>
</nav>

    <table class="table table-bordered table-striped table-responsive table-light">
            <thead >
              <tr>
                <td>ID</td>
                <td>Reservation ID</td>
                <td>Nomi</td>
                <td>Miqdori</td>
                <td>Narxi</td>
                <td>Buyurtmalar</td>
                <td>Buyurtma xolati</td>
                <td>Boshqarish</td>
            </tr>
            
            </thead>
            <tbody class="admin_tbody">
              {{#each flowers}}
               <tr>
               <td> {{id}}</td>
               <td> {{reservations.id}}</td>
               <td> {{title}}</td>
               <td> {{amount}}</td>
               <td> {{price}} so'm</td>
               <td> {{reservations.amount}}</td>
               <td> {{reservations.status}}</td>
               <td class=" d-flex justify-content-center gap-2">
                {{!-- <form action="/admins/flower/edit/{{id}}" method="post"> --}}
                  <button type="submit" class="btn p-1 btn-info" data-id="{{id}}" data-title="{{title}}" data-amount="{{reservations.amount}}" data-price="{{price}}">Izohlar</button>
                  <button type="submit" class="btn edit-btn p-1 btn-success" data-edit="edit" data-id="{{id}}" data-resid="{{reservations.id}}" data-title="{{title}}" data-description="{{description}}" data-imageurl="{{imageUrl}}" data-amount="{{amount}}" data-price="{{price}}" data-status="{{status}}">Tahrirlash</button>
                {{!-- </form> --}}
                <form action="/admins/flower/delete/{{id}}" method="post">
                  <button type="submit" class="btn p-1 btn-danger ">O'chirish</button>
                </form>
               </td>
               </tr>
            {{/each}}
               <tr>
                 <td colspan="2">Jami</td>
                 <td > {{allFlowersCount}} </td>
                 <td > {{sum}} so'm</td>
                 <td > {{allReservationsCount}}</td>
               </tr>
            </tbody>
    </table>
</div>